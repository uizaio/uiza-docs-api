```go
import (
  uiza "github.com/uizaio/api-wrapper-go"
  "github.com/uizaio/api-wrapper-go/entity"
)

func init() {
  Uiza.AppID = "<%= config[:app_id] %>"
  Uiza.Authorization = "<%= config[:token] %>"
}

params := &uiza.EntityUpdateParams{
  ID: uiza.String("<%= config[:entity_update_id] %>"),
  Name: uiza.String("<%= config[:entity_update_name] %>"),
  Description: uiza.String("<%= config[:entity_update_description] %>"),
}
response, err := entity.Update(params)
if err != nil {
  log.Printf("%v\n", err)
} else {
  log.Printf("%v\n", response)
}
